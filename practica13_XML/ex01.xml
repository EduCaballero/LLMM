<!--
1.	Crea un nuevo documento XML con el siguiente código. 
Añade dos habitaciones más con  sus atributos id y los elementos nombre, 
mueble, puerta necesarios. Debe de estar bien formado, y seguir la misma estructura.
-->


<micasa>
    <habitacion id='comedor'>
        <funcion>comedor</funcion>
        <nombre>comedor</nombre>
        <mueble>mesa</mueble>
        <mueble>sofá</mueble>
        <puerta a='escalera'/>
    </habitacion>
    <habitacion id='cocina'>
        <funcion>cocinar</funcion>
        <nombre>cocina</nombre>
        <mueble>estantes</mueble>
        <mueble>bajo encimera</mueble>
        <electrodomestico>nevera</electrodomestico>
        <electrodomestico>microhondas</electrodomestico>
        <puerta a='pasillo'/>
    </habitacion>
    <habitacion id='despacho'>
        <funcion>trabajar</funcion>
        <nombre>despacho</nombre>
        <mueble>escritorio</mueble>
        <mueble>silla de escritorio</mueble>
        <puerta a='pasillo'/>
    </habitacion>
</micasa>

